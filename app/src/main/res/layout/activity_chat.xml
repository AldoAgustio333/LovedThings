<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Chat"
    android:background="@color/white"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|enterAlways"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:background="@color/white"

        >

        <RelativeLayout
            android:paddingEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            >
            <ImageView
                android:id="@+id/btnBack"
                android:layout_centerVertical="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_row_left"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/btnPP"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="500dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/main"
                    >
                    <ImageView
                        android:id="@+id/addimgPP"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_toEndOf="@+id/btnPP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                >
                <TextView
                    android:id="@+id/addUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anonim"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinssemibold"
                    android:textSize="12dp"
                    />
            </RelativeLayout>

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recPesanUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tamplateFooter"
        android:layout_below="@+id/toolbar"
        tools:listitem="@layout/item_chat"
        />
    <RelativeLayout
        android:id="@+id/tamplateFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
        <RelativeLayout
            android:id="@+id/tamplateChatProduk"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"
                android:layout_centerVertical="true"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/main"
                    >
                    <ImageView
                        android:id="@+id/addImagePrduk"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_toEndOf="@id/card"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/addMerek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anonim"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinssemibold"
                    android:textSize="12dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/addKategori"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anonim"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="12dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - "
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="12dp"
                        />
                    <TextView
                        android:id="@+id/addSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anonim"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="12dp"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/addHarga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anonim"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinssemibold"
                    android:textSize="12dp"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_xmark"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/tamplateChatProduk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tampatepesan"
            >
            <EditText
                android:layout_toStartOf="@+id/btnSend"
                android:layout_centerVertical="true"
                android:id="@+id/addPesan"
                android:maxHeight="100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukan pesan disini"
                android:textSize="12dp"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/black"
                android:background="@drawable/btn_strock"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:paddingVertical="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/btnSend"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="500dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="20dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/main"
                    >
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_send"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>