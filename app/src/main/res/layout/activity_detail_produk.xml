<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DetailProduk"
    android:background="@color/white"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|enterAlways"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:background="@color/white"
        >

        <RelativeLayout
            android:paddingEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/btnBack"
                android:layout_centerVertical="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_row_left"
                />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/btnBack"
                android:layout_marginLeft="20dp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/logo_things"
                />

            <ImageView
                android:id="@+id/btnChart"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_keranjang"
                />
            <ImageView
                android:id="@+id/btnSearch"
                android:layout_toStartOf="@+id/btnChart"
                android:layout_centerVertical="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_search"
                android:layout_marginRight="15dp"
                />


        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomNav"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:id="@+id/tamplateimg"
                android:layout_width="match_parent"
                android:layout_height="390dp"
                android:background="@color/main"
                >
                <ImageView
                    android:id="@+id/imgProduk"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@+id/tamplateimg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                >
                <TextView
                    android:id="@+id/kategori"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Atasan Wanita"
                    android:fontFamily="@font/poppinsbold"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    />

                <RelativeLayout
                    android:id="@+id/identifikasi"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/kategori"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/main"
                    android:padding="1dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:padding="6dp"
                            >
                            <TextView
                                android:id="@+id/txtmerk"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Merek"
                                android:fontFamily="@font/poppinssemibold"
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                android:layout_weight="1"
                                />
                            <TextView
                                android:layout_weight="1"
                                android:id="@+id/addMerek"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="The Executive"
                                android:fontFamily="@font/poppinsregular"
                                android:layout_alignParentEnd="true"
                                android:textColor="#A9A7A7"
                                android:textSize="12dp"
                                android:textAlignment="textEnd"
                                />

                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/main"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:padding="6dp"
                            >
                            <TextView
                                android:id="@+id/txtukuran"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ukuran"
                                android:fontFamily="@font/poppinssemibold"
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                />
                            <TextView
                                android:id="@+id/addUkuan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Size "
                                android:fontFamily="@font/poppinsregular"
                                android:textAlignment="textEnd"
                                android:textColor="#A9A7A7"
                                android:textSize="12dp"
                                android:layout_alignParentEnd="true"
                                />
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/main"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:padding="6dp"
                            >
                            <TextView
                                android:id="@+id/txtharga"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Harga"
                                android:fontFamily="@font/poppinssemibold"
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                />
                            <TextView
                                android:id="@+id/txtrp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp."
                                android:fontFamily="@font/poppinsregular"
                                android:textAlignment="textEnd"
                                android:textColor="#A9A7A7"
                                android:textSize="12dp"
                                android:layout_toStartOf="@+id/addHarga"
                                />
                            <TextView
                                android:id="@+id/addHarga"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100000"
                                android:fontFamily="@font/poppinsregular"
                                android:textAlignment="textEnd"
                                android:textColor="#A9A7A7"
                                android:textSize="12dp"
                                android:layout_alignParentEnd="true"
                                />
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/main"
                            />
                        <RelativeLayout
                            android:padding="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            >
                            <TextView
                                android:id="@+id/txtdef"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Deskripsi"
                                android:fontFamily="@font/poppinssemibold"
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                android:layout_weight="1"
                                />
                            <TextView
                                android:layout_below="@+id/txtdef"
                                android:id="@+id/addDes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Barang ba;llklasasddasdsdadadasdsdasdaddasdadadklkll kkjjkjkjlklk"
                                android:fontFamily="@font/poppinsregular"
                                android:textColor="#A9A7A7"
                                android:textSize="12dp"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/identitasUser"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/identifikasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:layout_marginBottom="40dp"
                    >
                    <RelativeLayout
                       android:id="@+id/tammplateprofil"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       >
                       <androidx.cardview.widget.CardView
                           android:id="@+id/cardProfil"
                           android:layout_width="45dp"
                           android:layout_height="45dp"
                           app:cardCornerRadius="500dp"
                           android:layout_marginBottom="10dp"
                           >
                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:background="@color/main"
                               >
                               <ImageView
                                   android:id="@+id/imgUser"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   />
                           </RelativeLayout>
                       </androidx.cardview.widget.CardView>
                       <TextView
                           android:id="@+id/addUsername"
                           android:layout_toEndOf="@+id/cardProfil"
                           android:layout_marginLeft="10dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="sucirahmandhani"
                           android:fontFamily="@font/poppinsregular"
                           android:textColor="#A9A7A7"
                           android:textSize="12dp"
                           />
                       <TextView
                           android:id="@+id/addAlamat"
                           android:layout_below="@+id/addUsername"
                           android:layout_toEndOf="@+id/cardProfil"
                           android:layout_marginLeft="10dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="The Executive"
                           android:fontFamily="@font/poppinsregular"
                           android:textColor="#A9A7A7"
                           android:textSize="12dp"
                           />
                   </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/btnKunjungi"
                        android:paddingLeft="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_btnnav1"
                        >
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card2"
                            android:layout_toEndOf="@+id/txtkeranjang"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:cardCornerRadius="50dp"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#CDC5B1"
                                >
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/ic_btnright_black"
                                    android:layout_centerInParent="true"
                                    />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/txtkeranjang"
                            android:layout_marginEnd="10dp"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Kunjungi Profil"
                            android:fontFamily="@font/poppinssemibold"
                            android:textSize="12dp"
                            android:textColor="@color/black"
                            android:layout_centerVertical="true"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/btnChat"
                        android:layout_marginVertical="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/btnKunjungi"
                        android:paddingLeft="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_btnnav1"
                        >
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card4"
                            android:layout_toEndOf="@+id/txtchat"
                            android:layout_width="32dp"
                            android:layout_height="23dp"
                            app:cardCornerRadius="50dp"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#CDC5B1"
                                >
                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@drawable/ic_chat"
                                    android:layout_centerInParent="true"
                                    />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/txtchat"
                            android:layout_marginEnd="10dp"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="Chat"
                            android:fontFamily="@font/poppinssemibold"
                            android:textSize="12dp"
                            android:textColor="@color/black"
                            android:layout_centerVertical="true"
                            />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"

        >
        <TextView
            android:padding="10dp"
            android:id="@+id/btnKeranjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keranjang"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:layout_weight="1"
            android:background="@color/main"
            android:textAlignment="center"
            />
        <TextView
            android:padding="10dp"
            android:id="@+id/btnBeli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beli Sekarang"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:layout_weight="1"
            android:background="@color/bottomitem"
            android:textAlignment="center"
            />
    </LinearLayout>


</RelativeLayout>