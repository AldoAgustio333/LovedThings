<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FormTambahProduk"
    android:background="@color/white"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|enterAlways"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:background="@color/white"
        >

        <RelativeLayout
            android:paddingEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/btnBack"
                android:layout_centerVertical="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_row_left"
                />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/btnBack"
                android:layout_marginLeft="20dp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/logo_things"
                />

            <ImageView
                android:id="@+id/btnChart"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_keranjang"
                />

            <ImageView
                android:id="@+id/btnChat"
                android:layout_toStartOf="@+id/btnChart"
                android:layout_centerVertical="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_chat"
                android:layout_marginRight="15dp"
                />

            <ImageView
                android:id="@+id/btnSearch"
                android:layout_toStartOf="@+id/btnChat"
                android:layout_centerVertical="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_search"
                android:layout_marginRight="15dp"
                />
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/txtHeader"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jual Produk"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="12dp"
        android:textColor="@color/black"
        android:background="@color/main"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp"
        />
    <RelativeLayout
        android:id="@+id/idheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/txtHeader"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Foto"
                    android:fontFamily="@font/poppinssemibold"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="15dp"
                    >
                    <ImageView
                        android:id="@+id/imgbg"
                        android:background="@drawable/ic_addfoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                    <ImageView
                        android:id="@+id/addImageProduk"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deskripsi"
                    android:fontFamily="@font/poppinssemibold"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    />
                <EditText
                    android:id="@+id/addDes"
                    android:padding="10dp"
                    android:gravity="top"
                    android:maxHeight="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Masukan deskripsi produk anda disini"
                    android:fontFamily="@font/poppinsregular"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_strock_black"
                    />
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kategori"
                    android:fontFamily="@font/poppinssemibold"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    />

                    <Spinner
                        android:layout_centerVertical="true"
                        android:paddingHorizontal="7dp"
                        android:paddingVertical="2dp"
                        android:id="@+id/addKategori"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="@drawable/bg_strock_black"
                        />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Merek"
                    android:fontFamily="@font/poppinssemibold"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    />
                <EditText
                    android:id="@+id/addMerek"
                    android:singleLine="true"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukan merek"
                    android:padding="10dp"
                    android:fontFamily="@font/poppinsregular"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_strock_black"
                    />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ukuran"
                    android:fontFamily="@font/poppinssemibold"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    />
                <EditText
                    android:id="@+id/addUkuan"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukan ukuran"
                    android:fontFamily="@font/poppinsregular"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_strock_black"
                    />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga"
                    android:fontFamily="@font/poppinssemibold"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    />
                <EditText
                    android:id="@+id/addHarga"
                    android:inputType="number"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:layout_marginTop="10dp"
                    android:drawableStart="@drawable/ic_rp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/poppinsregular"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_strock_black"
                    />
                <TextView
                    android:id="@+id/btnSave"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Simpan"
                    android:fontFamily="@font/poppinssemibold"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="10dp"
                    android:background="@drawable/btn_fill2"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="50dp"
                    />
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</RelativeLayout>