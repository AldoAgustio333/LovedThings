<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PaymentMethode.MethodPaymentActivity"
    android:background="#EEEFF3"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_xmark"
                />
            <TextView
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Review Pembayaran"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinssemibold"
                />
        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F9FAFC"
                android:orientation="vertical"
                android:padding="20dp"
                >
                <TextView
                    android:id="@+id/txtNamaBarang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JUMLAH TAGIHAN"
                    android:textSize="12dp"
                    android:textColor="#636D78"
                    android:fontFamily="@font/poppinsmedium"
                    />
                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/addTotalHarga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp.20000"
                    android:textSize="24dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinssemibold"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
       <RelativeLayout
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           >
           <androidx.cardview.widget.CardView
               android:id="@+id/card"
               android:layout_width="50dp"
               android:layout_height="50dp"
               app:cardCornerRadius="100dp"
               >
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:background="@drawable/logo_things"
                   />
           </androidx.cardview.widget.CardView>
           <TextView
               android:layout_marginLeft="10dp"
               android:layout_centerVertical="true"
               android:layout_toEndOf="@+id/card"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="ThingsApp"
               android:textSize="12dp"
               android:textColor="@color/black"
               android:fontFamily="@font/poppinssemibold"
               android:drawableEnd="@drawable/ic_centang"
               />
       </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/txtsaldo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingTop="10dp"
            >
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/gopay"
                />
            <RelativeLayout
                android:id="@+id/saldo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/logo"
                >

                <TextView
                    android:id="@+id/namaLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GoPay"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinssemibold"
                    />
                <TextView
                    android:layout_below="@+id/namaLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp.300000"
                    android:textSize="12dp"
                    android:textColor="#636D78"
                    android:fontFamily="@font/poppinssemibold"
                    />
            </RelativeLayout>
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_margin="20dp"
            android:layout_below="@+id/txtsaldo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            >
            <RelativeLayout
                android:id="@+id/bgTombolBayar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#22A92F"
                >
                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bayar"
                    android:textSize="14dp"
                    android:textColor="#FFF"
                    android:fontFamily="@font/poppinsbold"
                    />
                <TextView
                    android:id="@+id/jmlTotal"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/send"
                    android:padding="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp.50000"
                    android:textSize="14dp"
                    android:textColor="#FFF"
                    android:fontFamily="@font/poppinssemibold"
                    />
                <ImageView
                    android:id="@+id/send"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ic_send2"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="20dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>



</RelativeLayout>