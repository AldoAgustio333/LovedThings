<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Home"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|enterAlways"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:background="@color/white"
        >

        <RelativeLayout
            android:paddingEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/btnUser"
                android:layout_centerVertical="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_user"
                />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/logo_things"
                />

            <ImageView
                android:id="@+id/btnSearch"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_search"
                />


        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tamplateBottomNav"
        android:layout_below="@+id/toolbar"
        />
    <RelativeLayout
        android:id="@+id/tamplateBottomNav"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
        <RelativeLayout
            android:id="@+id/btnPenjualan"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btnnav1"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="50dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#CDC5B1"
                    >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_penjualan"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/card1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Penjualan"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btnKeranjang"
            android:paddingLeft="10dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btnnav1"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_toEndOf="@+id/txtkeranjang"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="50dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#CDC5B1"
                    >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_keranjang"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/txtkeranjang"
                android:layout_marginEnd="10dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Keranjang"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btnPembelian"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/btnPenjualan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btnnav1"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="50dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#CDC5B1"
                    >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_pembelian"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/card3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Pembelian"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btnChat"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/btnKeranjang"
            android:paddingLeft="10dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btnnav1"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:layout_toEndOf="@+id/txtchat"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="50dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#CDC5B1"
                    >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_chat"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/txtchat"
                android:layout_marginEnd="10dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <View
            android:layout_below="@+id/btnChat"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            />

    </RelativeLayout>

</RelativeLayout>