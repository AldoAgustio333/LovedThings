<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/main"
                >
                <ImageView
                    android:id="@+id/imgBarang"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:paddingVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bottomitem"
            android:layout_below="@+id/card"
            >
            <TextView
                android:id="@+id/txtBarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Brand"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:layout_centerHorizontal="true"
                />
            <RelativeLayout
                android:id="@+id/tamplateSize"
                android:layout_below="@+id/txtBarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                >

                <TextView
                    android:id="@+id/txtSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Size : "
                    android:textColor="@color/black"
                    android:textSize="12dp" />
                <TextView
                    android:id="@+id/addSize"
                    android:layout_toEndOf="@+id/txtSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/tamplateHarga"
                android:layout_below="@+id/tamplateSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                >
                <TextView
                    android:id="@+id/txtHarga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp."
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/black"
                    android:textSize="12dp"

                    />
                <TextView
                    android:id="@+id/addHarga"
                    android:layout_toEndOf="@+id/txtHarga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    />
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>