<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="10dp"

    >
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_centerVertical="true"
            android:id="@+id/tammplateprofil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/cardProfil"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="500dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/main"
                    >
                    <ImageView
                        android:id="@+id/imgUser"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/addUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/cardProfil"
                android:fontFamily="@font/poppinssemibold"
                android:text="sucirahmandhani"
                android:textColor="@color/black"
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/addPesan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addUsername"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/cardProfil"
                android:ellipsize="end"
                android:fontFamily="@font/poppinsregular"
                android:maxLength="10"
                android:singleLine="true"
                android:text="Pesan"
                android:textColor="@color/black"
                android:textSize="10dp"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/addWaktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addUsername"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/poppinsregular"
                android:text="The Executive"
                android:textColor="@color/black"
                android:textSize="10dp"
                tools:ignore="TextSizeCheck" />
        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>