<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        android:padding="1dp"
        >
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >
            <TextView
                android:id="@+id/addStatus"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sedang dikirim"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/poppinsregular"
                android:textColor="#016C90"
                android:textSize="12dp"
                />
            <TextView
                android:id="@+id/btnSelesai"
                android:layout_below="@+id/addStatus"
                android:layout_marginTop="30dp"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selesai"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:background="@drawable/btn_green"
                />
            <RelativeLayout
                android:id="@+id/tammplateprofil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardProfil"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="500dp"
                    android:layout_marginBottom="10dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/main"
                        >
                        <ImageView
                            android:id="@+id/imgUser"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/addUsername"
                    android:layout_toEndOf="@+id/cardProfil"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sucirahmandhani"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="#A9A7A7"
                    android:textSize="8dp"
                    />
                <TextView
                    android:id="@+id/addAlamat"
                    android:layout_below="@+id/addUsername"
                    android:layout_toEndOf="@+id/cardProfil"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Executive"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="#A9A7A7"
                    android:textSize="8dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/identitas"
                android:layout_below="@+id/tammplateprofil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/imgProduk"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@+id/imgProduk"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:id="@+id/addKategori"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Atasan Wanita"
                        android:fontFamily="@font/poppinssemibold"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        />
                    <TextView
                        android:id="@+id/addMerek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="sucirahmandhani"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        />
                    <TextView
                        android:id="@+id/addSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Atasan Wanita"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        />
                </LinearLayout>



            </RelativeLayout>
            <LinearLayout
                android:layout_below="@+id/identitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:id="@+id/tamplateHarga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/txtharga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga Produk"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        />
                    <TextView
                        android:id="@+id/txtRp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/addTotalHarga"
                        android:fontFamily="@font/poppinssemibold"
                        android:text="Rp."
                        android:textColor="@color/black"
                        android:textSize="12dp" />
                    <TextView
                        android:id="@+id/addTotalHarga"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000000"
                        android:fontFamily="@font/poppinssemibold"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/tamplatePengiriman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/txtpengiriman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pengiriman"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:background="@drawable/gosen"
                        android:layout_toEndOf="@+id/txtpengiriman"
                        android:layout_marginLeft="10dp"
                        />
                    <TextView
                        android:id="@+id/txtRp2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/addTotalPengiriman"
                        android:fontFamily="@font/poppinssemibold"
                        android:text="Rp."
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/addTotalPengiriman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/poppinssemibold"
                        android:text="12000"
                        android:textColor="@color/black"
                        android:textSize="12dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/tamplateTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/txttotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:fontFamily="@font/poppinssemibold"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />
                    <RelativeLayout
                        android:id="@+id/tamplatePerjalanan"
                        android:layout_below="@+id/txttotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:id="@+id/imgPengiriman"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/ic_truck"
                            android:layout_marginLeft="10dp"
                            />
                        <TextView
                            android:layout_toEndOf="@+id/imgPengiriman"
                            android:layout_centerVertical="true"
                            android:id="@+id/addalamatPesanan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pesanan sedang dalam perjalanan"
                            android:fontFamily="@font/poppinssemibold"
                            android:textColor="#016C90"
                            android:layout_marginHorizontal="10dp"
                            android:textSize="10dp"
                            />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/txtRp3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/addTotal"
                        android:fontFamily="@font/poppinssemibold"
                        android:text="Rp."
                        android:textColor="@color/black"
                        android:textSize="16dp" />
                    <TextView
                        android:id="@+id/addTotal"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12000"
                        android:fontFamily="@font/poppinssemibold"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>