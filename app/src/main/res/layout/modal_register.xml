<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomregister"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_top_rounded"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        >

        <RelativeLayout
            android:layout_marginHorizontal="20dp"
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/black"
                android:text="Sign Up"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/btnclose"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_xmark" />
        </RelativeLayout>

        <TextView
            android:id="@+id/des"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:text="Create your account now!"
            android:textSize="12dp" />

        <RelativeLayout
            android:id="@+id/tamplate"
            android:layout_marginHorizontal="20dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:id="@+id/countainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:id="@+id/tampalteNama"
                    android:layout_alignParentStart="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RelativeLayout
                        android:id="@+id/txtnama"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinssemibold"
                            android:text="Nama"
                            android:textSize="12dp" />

                    </RelativeLayout>
                    <EditText
                        android:id="@+id/addNama"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/btn_strock"
                        android:layout_below="@+id/txtnama"
                        android:elevation="8dp"
                        android:hint="Nama"
                        android:paddingVertical="10dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textSize="12dp"
                        android:translationY="0dp"
                        android:translationZ="-5dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppinsregular"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@+id/tampalteNama"
                    android:id="@+id/tampalteEmail"
                    android:layout_alignParentStart="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RelativeLayout
                        android:id="@+id/txtemail"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinssemibold"
                            android:text="Email"
                            android:textSize="12dp" />

                    </RelativeLayout>
                    <EditText
                        android:id="@+id/addemail"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/btn_strock"
                        android:layout_below="@+id/txtemail"
                        android:elevation="8dp"
                        android:hint="Email"
                        android:paddingVertical="10dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textSize="12dp"
                        android:translationY="0dp"
                        android:translationZ="-5dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppinsregular"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/tampalteNohp"
                    android:layout_below="@+id/tampalteEmail"
                    android:layout_alignParentStart="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RelativeLayout
                        android:id="@+id/txtnohp"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinssemibold"
                            android:text="No.Handphone"
                            android:textSize="12dp" />

                    </RelativeLayout>
                    <EditText
                        android:id="@+id/addNohp"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/btn_strock"
                        android:layout_below="@+id/txtnohp"
                        android:elevation="8dp"
                        android:hint="Nohp"
                        android:paddingVertical="10dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textSize="12dp"
                        android:translationY="0dp"
                        android:translationZ="-5dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppinsregular"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/tampaltePassword"
                    android:layout_below="@+id/tampalteNohp"
                    android:layout_alignParentStart="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RelativeLayout
                        android:id="@+id/txtpass"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinssemibold"
                            android:text="Password"
                            android:textSize="12dp" />

                    </RelativeLayout>
                    <EditText
                        android:id="@+id/addpass"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:textSize="12dp"
                        android:fontFamily="@font/poppinsregular"
                        android:drawableEnd="@drawable/ic_view"
                        android:background="@drawable/btn_strock"
                        android:layout_below="@+id/txtpass"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="10dp"
                        android:paddingVertical="10dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/tampalteVerifPass"
                    android:layout_below="@+id/tampaltePassword"
                    android:layout_alignParentStart="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RelativeLayout
                        android:id="@+id/txtverif"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinssemibold"
                            android:text="Verifikasi Password"
                            android:textSize="12dp" />

                    </RelativeLayout>

                    <EditText
                        android:id="@+id/addverif"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Re-password"
                        android:textSize="12dp"
                        android:fontFamily="@font/poppinsregular"
                        android:layout_alignParentStart="true"
                        android:drawableEnd="@drawable/ic_view"
                        android:background="@drawable/btn_strock"
                        android:layout_below="@+id/txtverif"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="10dp"
                        android:paddingVertical="10dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:orientation="horizontal"
                        />
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/btnSignUp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="30dp"
                android:paddingVertical="10dp"
                android:layout_below="@+id/countainer"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/btn_fill2"
                android:fontFamily="@font/poppinsbold"
                android:text="Sign Up"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

        <View
            android:layout_below="@+id/tamplate"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            />


    </RelativeLayout>


</RelativeLayout>